{
  "name": "vardot/varbase-project",
  "description": "Project template for Varbase distribution.",
  "type": "project",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Vardot",
      "homepage": "https://github.com/vardot",
      "role": "Maintainer"
    }
  ],
  "support": {
    "issues": "http://drupal.org/project/issues/varbase",
    "source": "http://cgit.drupalcode.org/varbase"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.2.0",
    "cweagans/composer-patches": "^1.6.0",
    "wikimedia/composer-merge-plugin": "~1.4",
    "drupal-composer/drupal-scaffold": "^2.2.0",
    "drupal/drupal-library-installer-plugin": "~0.3",
    "vardot/varbase": "8.4.x-dev"
  },
  "config": {
    "bin-dir": "bin/",
    "secure-http": false,
    "sort-packages": true,
    "preferred-install": "source",
    "classmap-authoritative": true,
    "prepend-autoloader": false,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "conflict": {
    "drupal/drupal": "*"
  },
  "extra": {
    "merge-plugin": {
      "include": [
        "docroot/profiles/varbase/composer.json"
      ],
      "recurse": false,
      "replace": false,
      "merge-dev": true,
      "merge-extra": false,
      "merge-extra-deep": false,
      "merge-scripts": false
    },
    "installer-paths": {
      "docroot/core": ["drupal/core"],
      "docroot/profiles/{$name}": ["type:drupal-profile"],
      "docroot/modules/contrib/{$name}": ["type:drupal-module"],
      "docroot/themes/contrib/{$name}": ["type:drupal-theme"],
      "docroot/libraries/{$name}": ["type:drupal-library"],
      "docroot/modules/custom/{$name}": ["type:drupal-custom-module"],
      "docroot/themes/custom/{$name}": ["type:drupal-custom-theme"],
      "drush/contrib/{$name}": ["type:drupal-drush"]
    },
    "enable-patching": true
  }
}
